{
    "compilerOptions": {
      "outDir": "./build",
      "module": "ES6",
      "target": "ES6",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
        "@vladnets/*": ["../@vladnets/*"]
      },
    },
    "include": [
      "./src/**/*",
      "./@vladnets/**/*/index.ts",
    ],
    "exclude": [
      "./build/**/*",
      "./sandbox/**/*",
      "./node_modules/**/*"
    ]
}